<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weatherappmobile.Views.AboutPage"
             xmlns:vm="clr-namespace:Weatherappmobile.ViewModels"
             Title="{Binding Title}">

    <StackLayout>
        <Button Text="Historia wyszukiwań" Clicked="Button_Clicked" />
        <CollectionView x:Name="pogoda">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding name}"></Label>
                        <Label Text="{Binding country}"></Label>
                        <Label Text="{Binding temp}"></Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
