<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:Weatherappmobile.ViewModels"
             x:Class="Weatherappmobile.Views.WeatherInfoPage"
             Title="WeatherInfoPage">
    <ContentPage.BindingContext>
        <viewmodel:WeatherInfoViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--<Label 
               Font="Bold, 16"
               VerticalOptions="Start"
               Text="{Binding Weather.sys.country}"
            Grid.Column="0"
            Grid.Row="0"
                
                Margin="10,20"/>-->
            <Entry 
                Margin="0, 20"
                VerticalOptions="Start"
                Grid.Column="0"
                Grid.Row="0"
                Text="{Binding CityName, Mode=TwoWay}"
                />
            <Button
                Margin="0, 20"
                VerticalOptions="Start"
                Text="Search"
                TextColor="White"
                x:Name="SearchBtn"
                Grid.Column="1"
                Grid.Row="0"
                Command="{Binding ButtonCommand}"
                />
            <Label
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Grid.Row="1"
            Font="Bold, 32"
            Text="{Binding Weather.name}"
            TextColor="black"
            VerticalOptions="Center"
            HorizontalOptions="Center"
                Margin="50, 2"
                
            />
            <Label
            Grid.ColumnSpan="2"
            Grid.Column="0"
            Grid.Row="2"
            Font="24"
            Text="{Binding Weather.sys.country}"
            TextColor="black"
            VerticalOptions="Center"
            HorizontalOptions="Center"
                
            />
            <Label 
            Grid.Column="0"
                Grid.ColumnSpan="2"
            Grid.Row="3"
            Font="Bold, 52"
                HorizontalOptions="Center"
                VerticalOptions="Center"
            Text="{Binding Weather.main.temp , StringFormat='{0:F0}°C'}"
            TextColor="black"
                Margin="10, 2"
                
            />
            <Label 
            Grid.Column="0"
            Grid.Row="4"
            Font="16"
                VerticalOptions="Start"
            HorizontalOptions="End"
            Text="Wiatr:  "
            TextColor="black"
                Margin="0, 0"
                
            />

            <Label
            Grid.Column="1"
            Grid.Row="4"
                Font="16"
            VerticalOptions="Start"
            HorizontalOptions="Start"
            Text="{Binding Weather.wind.speed , StringFormat='{0:F2} km/h'}"
            />
            <Button x:Name="GoToHistoryBtn"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    TextColor="White"
                    Text="Check your weather's history "
                    Grid.Row="8"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="GoToHistoryBtn_Clicked"
                    WidthRequest="600"
                    HeightRequest="120"/>


        </Grid>
    </ContentPage.Content>
</ContentPage>