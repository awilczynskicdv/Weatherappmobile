<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:Weatherappmobile.ViewModels"
             x:Class="Weatherappmobile.Views.WeatherInfoPage"
             Title="WeatherInfoPage">
    <ContentPage.BindingContext>
        <viewmodel:WeatherInfoViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="asdasdasd" FontSize="Medium" TextColor="Black" Background="red"></Label>
            <Label Text="{Binding Weather.wind.speed}" FontSize="Medium" TextColor="Black" Background="yellow"></Label>
            <Label Text="{Binding Weather.sys.country}" FontSize="Medium" TextColor="Black" Background="green"></Label>
            <Label Text="{Binding Weather.name}" FontSize="Medium" TextColor="Black" Background="blue"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>